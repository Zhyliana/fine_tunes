<h1>all albums</h1>

<% @albums.each do |album| %>
  <%= album.id %>. <b><%= link_to album.name, album_url(album) %></b>  - <%= link_to album.band.name, band_url(album.band.id) %> <br>
  <ul>
    <% album.tracks.each do |track|%>
        <li><%= link_to track.name, track_url(track) %></li>
    <% end %>
  </ul><br>
<%end%>


