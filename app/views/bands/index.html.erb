<h1 style="font-family: sans-serif">all bands</h1>

<% @bands.each do |band| %>
  <%= band.id %>.<b><%= link_to band.name, band_url(band) %></b><br>
  <ul>
    <% band.albums.each do |album|%>
        <li><%= link_to album.name, album_url(album) %></li>
    <% end %>
  </ul><br>
<%end%>

<%= link_to "Create a New Band", new_band_url %>